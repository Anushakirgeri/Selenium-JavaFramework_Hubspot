<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Hub spot Test automtion regression suite" verbose="3" thread-count="2" parallel="tests">

    <test name="HubSpot Feature Testing - Login page - chrome" parallel = "methods" thread-count="5">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="com.test.LoginTest" />
        </classes>
    </test>

    <test name="HubSpot Feature Testing - Login page - FF" parallel = "methods" thread-count="5">
        <parameter name="browser" value="ff" />
        <classes>
            <class name="com.test.LoginTest" />
        </classes>

    </test>
</suite>